<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fahimshahrierrasel.mealtracker">

    <application
        android:name=".MealTrackerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CustomerRegisterActivity"
            android:label="@string/title_activity_customer_register"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fahimshahrierrasel.mealtracker.MainActivity" />
        </activity>
        <activity
            android:name=".AllCustomerActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fahimshahrierrasel.mealtracker.MainActivity" />
        </activity>
        <activity
            android:name=".CustomerDetailsActivity"
            android:label="@string/title_activity_customer_details"
            android:parentActivityName=".AllCustomerActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fahimshahrierrasel.mealtracker.AllCustomerActivity" />
        </activity>
        <activity
            android:name=".AllPaymentActivity"
            android:label="@string/title_activity_all_payment"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fahimshahrierrasel.mealtracker.MainActivity" />
        </activity>
    </application>

</manifest>